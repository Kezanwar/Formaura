build: 
	@cd cmd/api && go build -o ../../bin/formaura-api

run:
	@./bin/formaura-api

dev: 	
	@cd cmd/api && go build -o ../../bin/formaura-api
	@./bin/formaura-api

create-migration:
	@if [ -z "$(name)" ]; then \
		echo "‚ùå Please provide a migration name with: make create-migration name=your_name"; \
	else \
		goose create $(name) go; \
	fi

test:
	@go test -v ./... | grep -v '\[no test files\]' 
	

start-db: 
	@docker compose up -d

stop-db:
	@docker compose down 

exec-db:
	@docker exec -it formaura psql -U postgres
